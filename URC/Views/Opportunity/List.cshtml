@model IEnumerable<URC.Models.Opportunity>

@{
    ViewData["Title"] = "Index";
}

<div id="redbox-list">
    <div class="bg-white" id="white-banner-list">
        <h1 id="list-header">Opportunities: Admin</h1>

        <p>
            <a asp-action="Create">Create New</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Project Name
                    </th>
                    <th>
                        Professor Name
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProjectName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProfessorName)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.OpportunityID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.OpportunityID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.OpportunityID">Delete</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>